	Pages = {13404-13408},
	Researcherid-Numbers = {Wang, Minghuai/E-5390-2011 Penner, Joyce/J-1719-2012},
	Title = {Satellite methods underestimate indirect climate forcing by aerosols},
	Unique-Id = {ISI:000293895100018},
