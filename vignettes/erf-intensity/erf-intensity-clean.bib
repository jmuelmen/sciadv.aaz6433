	Pages = {1014-1017},
	Researcherid-Numbers = {Ackerman, Andrew/D-4433-2012 },
	Title = {The impact of humidity above stratiform clouds on indirect aerosol climate forcing},
	Unique-Id = {ISI:000225887000038},
	Volume = {432},
